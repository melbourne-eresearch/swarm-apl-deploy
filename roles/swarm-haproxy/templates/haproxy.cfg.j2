global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock mode 660 level admin
        stats timeout 30s
        user haproxy
        group haproxy
        daemon
        maxconn 2048

        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        tune.ssl.default-dh-param 2048
        ssl-default-bind-options no-sslv3
        ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS
        ssl-default-server-options no-sslv3
        ssl-default-server-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS

        userlist admins
             user {{ haproxy_admin }} insecure-password {{ haproxy_admin_password }}

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        option  http-server-close
        option  log-health-checks
        option  httpchk
        timeout connect 5000
        timeout client  50000
        timeout server  50000

frontend http
        bind *:80
        mode http
        reqadd X-Forwaded-Proto:\ http
        redirect scheme https code 301 if !{ ssl_fc }

frontend https
        bind *:443 ssl crt /etc/haproxy/certs/{{ fqdn }}.pem

        acl isAdmin http_auth(admins)
        acl api_url path_beg /api
        acl upload_url path_beg /upload/usergroup
        acl chat_url path_beg /http-ws or /http-bind

        http-response set-header Cache-Control no-cache,\ max-age=0 if { capture.req.uri -m beg /api }

        http-request auth if upload_url !isAdmin

        reqadd X-Forwarded-Proto:\ https
        default_backend ui
        use_backend api if api_url or upload_url
        use_backend chat if chat_url

        stats enable
        stats hide-version
        stats realm Haproxy\ Statistics
        stats uri /haproxy?stats
        stats auth {{ haproxy_admin }}:{{ haproxy_admin_password }}

frontend chat-mobile
        bind *:5222 ssl crt /etc/haproxy/certs/{{ fqdn }}.pem
        mode tcp
        option tcplog
        default_backend chat-tcp

backend ui
        timeout check 500
        option httpchk HEAD /
        server server1 127.0.0.1:180 maxconn 32 check

backend api
        option httpchk HEAD /
        timeout check 5000
        server server1 127.0.0.1:5000 maxconn 32 check fall 5 inter 500

backend chat
        option httpchk GET /http-ws HTTP/1.1\r\nHost:\ localhost
        timeout check 500
        option http-server-close
        option redispatch
        timeout connect 5s
        timeout server 30s
        timeout tunnel 1h # Tunneled connections may last for 1 hour
        server server1 127.0.0.1:15280 maxconn 32 check fall 5 inter 500

backend chat-tcp
        mode tcp
        option tcp-check
        option redispatch
        option srvtcpka
        option independent-streams
        timeout connect 5s
        timeout server 30s
        timeout tunnel 1h
        server server1 127.0.0.1:15222 maxconn 32 check fall 5 inter 500
